@model Category

@{await Html.RenderPartialAsync("_Partial_Categories");}


<div class="card bg-info text-white" >
    <div class="card-body">
        <h4 style="float:left">@Model.Name</h4>&nbsp; <sub>(@Model.Description)</sub>
    </div>
</div>


<div id="divUrunEkle" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h4 class="modal-title">Yeni Ürün Ekle</h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="CategoryId" value="@Model.Id" />
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        <input type="text" id="ProductName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" id="ProductDescription" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input type="button" value="Kaydet" onclick="ECommerce.Page.Category.Save();" class="btn btn-success" data-dismiss="modal" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
            </div>
        </div>

    </div>
</div>



<div id="Holder-Products" class="col-md-12">

</div>



<script>
    $(document).ready(function () {
        ECommerce.Page.Category.List();
    });
</script>

